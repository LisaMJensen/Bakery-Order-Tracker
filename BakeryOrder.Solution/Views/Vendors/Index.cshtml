@{
  Layout = "_Layout";
}
<link rel="stylesheet" type="text/css" href="~/css/styles.css" />
@using BakeryOrder.Models;
<div id="vendor-index">
<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  <h5>Description: @vendor.Description</h5>
}

<p><a href='/'>Back home</a></p>
</div>