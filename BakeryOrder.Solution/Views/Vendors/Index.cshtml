@{
  Layout = "_Layout";
}
<link rel="stylesheet" type="text/css" href="~/css/styles.css" />
@using BakeryOrder.Models;
<div id="vendor-index">
<h1 id="sub-header">Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <div id="vendor-cards">
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3> 
  <h4>Description:</h4>
  <h5>@vendor.Description</h5>
  </div>
  

}
<div id="home-link">
<p><a href='/'>Back home</a></p>
</div>
</div>